{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  },
  "include": [
    "components.d.ts",
    "auto-imports.d.ts",
    "src/**/*",
    "gen_data.ts",
    "uno.config.ts",
    "vite.config.ts",
    "shims.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
